<table class="items-table">
  <thead>
    <tr>
      <th>{{localize "USR.Item"}}</th>
      <th>{{localize "USR.Qty"}}</th>
      <th>{{localize "USR.Weight"}}</th>
      <th>{{localize "USR.Actions"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each gear as |item id|}}
      <tr>
        <td>
          <img
            src="{{item.img}}"
            title="{{item.name}}"
            width="24"
            height="24"
          />
          {{item.name}}
        </td>
        <td>{{item.data.quantity}}</td>
        <td>{{item.data.weight}}</td>
        <td>
          <a class="item-control item-edit" title="Edit Item" data-item-id="{{item._id}}"><i
              class="fas fa-edit"
            ></i></a>
          <a class="item-control item-delete" title="Delete Item" data-item-id="{{item._id}}"><i
              class="fas fa-trash"
            ></i></a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<a class="item-control item-create" title="{{localize 'USR.AddItem'}}">
  <i class="fas fa-plus"></i>
  {{localize "USR.AddItem"}}
</a>

